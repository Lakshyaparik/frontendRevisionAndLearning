<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div class="container">
      <h2>Enter Your Notes....</h2>
      <br />
      <div class="user-input-field">
        <form class="flex form" action="/create" method="post">
          <input
            class="form-title"
            type="text"
            name="title"
            placeholder="Enter title here"
          />
          <textarea name="desc" placeholder="Enter description here"></textarea>
          <button class="submit" type="submit">Submit</button>
        </form>
      </div>
      <div class="notes-cards">
        <% if (files && files.length > 0) { %>

  <% files.forEach((file) => { %>
     <div class="card">
          <h2><%=file%></h2>
          <div class="atags">
          <a href="/file/<%=file%>">Read more</a>
          <a class="edit-file" href="/edit/<%=file%>">edit file</a>
          </div>
        </div>
  <% }) %>

<% } else { %>
  <h3>There are no files yet</h3>
<% } %>
      </div>
    </div>
  </body>
</html>
